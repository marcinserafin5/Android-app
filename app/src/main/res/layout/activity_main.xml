<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/note"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="48dp"
        android:onClick="gotonote"
        android:text="Notatnik"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reminder"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="60dp"
        android:text="Przypominajka"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note" />

    <Button
        android:id="@+id/kstel"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="50dp"
        android:text="Książka Telefoniczna"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reminder" />

    <Button
        android:id="@+id/cenmulti"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="60dp"
        android:text="Centrum Multimedialne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kstel" />

</androidx.constraintlayout.widget.ConstraintLayout>